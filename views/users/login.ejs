<% layout ("/layouts/boilerplate.ejs") -%>
<div class="row mt-3">
  <h3 class="col-6 offset-3">Login on WonderLast</h3>
  <div class="col-6 offset-3">
    <form action="/login" method="post" class="needs-validation" novalidate>

      <div class="mb-3">
        <label for="username" class="form-label">USERNAME:</label>
        <input type="text" name="username" placeholder=" Add a catchy username" id="username" class="form-control" required>
      </div>
      
      <div class="mb-3">
        <label for="password" class="form-label">PASSWORD:</label>
        <input type="password" name="password" placeholder=" Enter your password" id="password" class="form-control" required>
      </div>
      <BUtton class="btn btn-success mb-3">Login</BUtton>
    </form>
  </div>
</div>